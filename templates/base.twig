        <!-- Dynamic Part -->

        {% for chargroup in chargroups %}
            <div class="row chargrp{{ loop.index0 }}">
                
                {% for char in chargroup %}
                    <div class="col-sm-12 col-md-6">
                        {{ include('charview.twig',char,thumburl,repgrp) }}
                    </div>
                {% endfor %}
                {% if not chargroup|length == 2 %}
                  {% for i in 1..2-chargroup|length %}
                    <div class="col-md-6">&nbsp;</div>
